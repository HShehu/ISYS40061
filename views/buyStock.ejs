<html>
	<head>
		<title>Stock Exchange Web Service </title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
		<link rel="stylesheet" href="/assets/css/main.css" />
	</head>
	<body class="is-preload">

		<!-- Wrapper -->
			<div id="wrapper">

				<!-- Main -->
					<div id="main">
						<div class="inner">

							<!-- Header -->
								<header id="header">
									<a href="#" class="logo">Hello <strong><%= user.username %></strong></a>
									<a href="#" class="logo">Wallet: <strong><%= user.walletUSD %></strong></a>
									<ul class="actions">
										<li><a href="#" class="button small" id="add-money">Add Money</a></li>
										<li><a href="#" class="button small">Logout</a></li>
									</ul>
									
									
								</header>

							<!-- Banner -->
								<section id="banner">
									<div class="content">
										<h3><%=stock.name%></h3>
                                        <form method="post" action="/buyStocks/<%=stock.symbol%>">
                                            <div class="row gtr-uniform">
                                                <div class="col-6 col-12-xsmall">
                                                    <input oninput="changeAmount(this.value,'<%=stock.price%>')" onkeypress="changeAmount(this.value,'<%=stock.price%>')" onchange="changeAmount(this.value,'<%=stock.price%>')" type="number" name="cost" id="num" value="" placeholder="Amount" min="0" max="<%=stock.availableShares%>" style="width: 100%" />
                                                </div>
                                                <h4>Buy $<strong id="amount"></strong></h4>
                                                <!-- Break -->
                                                <div class="col-12">
                                                    <ul class="actions">
                                                        <li><input type="submit" value="Buy Stock" class="primary" /></li>
                                                        <li><input type="reset" value="Reset" /></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </form>
									</div>
								</section>

							<!-- Footer -->
								<footer id="footer">
									<p class="copyright">&copy; Untitled. All rights reserved. Demo Images: <a href="https://unsplash.com">Unsplash</a>. Design: <a href="https://html5up.net">HTML5 UP</a>.</p>
								</footer>

						</div>
					</div>

			</div>

		<!-- Scripts -->
			<script src="/assets/js/jquery.min.js"></script>
			<script src="/assets/js/browser.min.js"></script>
			<script src="/assets/js/breakpoints.min.js"></script>
			<script src="/assets/js/util.js"></script>
			<script src="/assets/js/main.js"></script>
            <script>
                const amount = document.getElementById('amount')
                function changeAmount(curVal,price){
                    amount.textContent = (curVal*price).toFixed(2)

                }
            </script>
	</body>
</html>